/* pages/welcome/login/index.wxss */

.userName {
  height: 44rpx;
  font-size: 48rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 67rpx;
  margin: 195rpx 62rpx auto;
}

.descText {
  height: 31rpx;
  font-size: 32rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 67rpx;
  margin: 15rpx 64rpx auto;
}

.inputNameBlock {
  margin-top: 131rpx;
  margin-left: 64rpx;
  height: 120rpx;
  border-bottom: 1px solid #f0f0f0;
}

.inputNameValue {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(187, 187, 187, 1);
}

.inputCodeValue {
  height: 120rpx;
  font-size: 28rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(187, 187, 187, 1);
  line-height: 67rpx;
  margin-left: 64rpx;
}

.loginButton {
  height: 96rpx;
  background: linear-gradient(77deg, rgba(85, 221, 119, 1), rgba(56, 219, 155, 1));
  box-shadow: 0px 3rpx 7rpx 0rpx rgba(60, 150, 219, 0.35);
  border-radius: 48rpx;
  text-align: center;
  margin-top: 50rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.loginButton text {
  width: 68rpx;
  height: 33rpx;
  font-size: 36rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
}

.loginText {
  height: 24rpx;
  font-size: 28rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  text-align: center;
  margin-top: 30rpx;
}

.title {
  width: 80%;
  display: flex;
  margin: 80rpx auto 24rpx;
}

.line {
  flex: 1;
  border-top: 1rpx solid rgba(217, 217, 217, 1);
  position: relative;
  top: 6rpx;
  width: 162rpx;
}

.text {
  padding: 0 50rpx;
  font-size: 28rpx;
  height: 27rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(187, 187, 187, 1);
  margin-top: -10rpx;
}

.twoFlexBlock {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.webo {
  margin-top: 30rpx;
  margin-left: 92rpx;
  width: 92rpx;
  height: 92rpx;
  border: 1rpx solid rgba(255, 112, 112, 1);
  border-radius: 50%;
}

.weboText {
  margin-top: 29rpx;
  margin-left: 92rpx;
  height: 24rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(174, 174, 174, 1);
}
